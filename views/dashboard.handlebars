<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <section id="createNew" class="col-md-12">
    <div class="col-md-6">
      <h3>Create New Post:</h3>

      <form id= "newBlog" class="form new-post-form">
        <div class="form-group">
          <label for="post-name">Title:</label>
          <input class="form-input" type="text" id="title" name="post-name" />
        </div>
        <div class="form-group">
          <label for="post-desc">Content:</label>
          <textarea class="form-input" id="content" name="post-desc"></textarea>
        </div>
        <div class="form-group">
          <button id="create" type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </section>

  {{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/createPost.js"></script>
